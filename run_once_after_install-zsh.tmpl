#!/usr/bin/env bash
set -euo pipefail

{{- if eq .chezmoi.os "linux" }}

{{- if eq .distro "arch" }}
sudo pacman -S --needed zsh zsh-syntax-highlighting zsh-autosuggestions zsh-history-substring-search fzf
chsh -s /bin/zsh
{{- else if eq .distro "ubuntu" }}
sudo apt update
sudo apt install -y zsh fzf zsh-syntax-highlighting zsh-autosuggestions
chsh -s /bin/zsh
{{- end }}

{{- end }}

